<Window x:Class="Tienda_Virtual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tienda_Virtual"
        mc:Ignorable="d"
        Title="Inicio"  
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Estilos omitidos por brevedad (puedes dejarlos como los tienes) -->
    </Window.Resources>

    <Border CornerRadius="10" Background="AliceBlue">
        <Grid Name="Principal" Background="Transparent">

            <!-- HEADER -->
            <Grid Name="Header" Height="50" VerticalAlignment="Top" Background="Transparent">
                <Border CornerRadius="10,10,0,0" Background="#001F3F"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <!-- TÍTULO -->
                <Grid>
                    <Rectangle Fill="#3A6D8C" Width="150" Height="22" RadiusX="10" RadiusY="10"/>
                    <TextBlock Text="Tienda Virtual"
                               Foreground="Black"
                               FontSize="15"
                               FontFamily="Comic Sans MS"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- BOTONES SUPERIORES -->
                <Button x:Name="BtnCuenta"  Margin="445,0,0,0" Width="32" Height="32"
                        Click="BtnCuenta_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border Background="#79D7BE" CornerRadius="30" Width="30" Height="30">
                        <Image Source="SCS/IMG/User.png" Width="16" Margin="0,6,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    </Border>
                </Button>

                <Button x:Name="BtnCarrito"  Margin="483,0,0,0" Width="32" Height="32"
                        Click="BtnCarrito_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border Background="#79D7BE" CornerRadius="30" Width="30" Height="30">
                        <Image Source="SCS/IMG/Carrito.png" Width="20" Margin="4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </Border>
                </Button>

                <Button x:Name="BtnMinimizar"  Margin="542,0,0,0" Width="26" Height="24"
                        Click="Minimizar" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image Source="SCS/IMG/Minimizar.png" Width="15" VerticalAlignment="Center" RenderTransformOrigin="-0.944,0.519">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-3.116"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>

                <Button x:Name="BtnCerrar"  Margin="565,0,0,0" Width="26" Height="24"
                        Click="Cerrar" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image Source="SCS/IMG/Cerrar.png" Width="40" VerticalAlignment="Top"/>
                </Button>
            </Grid>

            <!-- CONTENIDO -->
            <Grid x:Name="GridContent" Margin="0,50,0,0" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Búsqueda -->
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="*"/>
                    <!-- Recomendaciones -->
                </Grid.RowDefinitions>

                <!-- Cuadro de búsqueda -->
                <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500" Height="40" Margin="0,20,0,0">
                    <TextBox x:Name="Busqueda"
                             VerticalAlignment="Center"
                             Padding="9"
                             FontSize="16"
                             BorderBrush="#79D7BE"
                             BorderThickness="2"
                             Background="White"
                             TextChanged="Busqueda_TextChanged"/>

                    <Button Content="🔍"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FontSize="20"
                            Click="SearchButton_Click"/>
                </Grid>

                <!-- Título -->
                <TextBlock Grid.Row="1" Text="Productos Recomendados"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="20"
                           Margin="0,10,0,10"
                           FontFamily="Century" />

                <!-- Panel dinámico de recomendaciones -->
                <WrapPanel Grid.Row="2" x:Name="PanelRecomendados"
                           Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
